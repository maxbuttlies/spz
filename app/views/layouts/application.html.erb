<!DOCTYPE html>
<html>
<head>
	<title>MyApp</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="all">
		<header class="head ">
			<div class="inner clearfix">	
				<div class="logo"></div>
				<h1>Spielmannszug 1902 Rheinbach e.V.</h1 >
					
					<ul>
						<%  
						menu.each { |article|  %>

						<li>
							<a href="../page/get?keyword=<%=article.keyword%>"><%=article.title%></a>
							<%if kinds? article.keyword%>
							<ul>
								<%getKinds(article.keyword).each { |e| %>
								<li><a href="get?keyword=<%=e.keyword%>"><%=e.title%></a>

								</li>
								<% }%>
							</ul>
							<%end%>
						</li>
						<% }%>

					</ul></div>
				</header>

				<div class="imageAtTop">

				</div>

				<main>
					<%= yield %>
				</main>
				<footer class="foot">
					Kontakt|Impressum
				</footer>
			</div>
		</body>
		</html>
